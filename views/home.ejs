<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3 d-flex p-3 flex-wrap" style="gap: 50px;">
        <% blogs.forEach(blog => { %>
                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.coverImageUrl %>" class="card-img-top" class="card-img-top img-fluid" alt="coverImageUrl" style="width: 100%; height: 200px; object-fit: cover;" >
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                  </div>
            
        <% }) %>
    </div>
    <%- include("./partials/script") %>
    


</body>
</html>