<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - <%= blog.title %></title>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            max-width: 800px;
            margin-top: 2rem;
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
            margin-bottom: 1rem;
            font-size: 2rem;
        }

        .blog-image {
            width: 100%;
            height: auto;
            max-height: 400px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .author-info {
            display: flex;
            align-items: center;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .author-info img {
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment-section {
            margin-top: 2rem;
            padding: 1rem;
            border-top: 2px solid #007bff;
        }

        .comment {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .comment img {
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment p {
            background-color: #e9ecef;
            padding: 10px;
            border-radius: 8px;
            max-width: 80%;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 15px;
            font-size: 1rem;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            border-radius: 8px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <%- include("./partials/nav") %> 

    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" class="blog-image" alt="Cover Image">
        <p class="mt-3"><%= blog.body %></p>
    </div>

    <div class="container author-info">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="Profile Image" width="80px">
        <span><strong><%= blog.createdBy.fullName %></strong></span>
    </div>

    <div class="container comment-section">
        <h2>Comments (<%= comments.length %>)</h2>

        <% if (locals.user) { %>
        <form action="comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input name="content" type="text" placeholder="Enter Your Comment" class="form-control" id="content" aria-describedby="content" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <% } else { %>
            <p class="mt-2">Please <a href="/user/signin" class="btn btn-link">sign in</a> to leave a comment.</p>
        <% } %>
    </div>

    <div class="container mt-3">
        <% comments.forEach(comment => { %>
            <div class="comment">
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="Commenter Image">
                <p><strong><%= comment.createdBy.fullName %>:</strong> <%= comment.content %></p>
            </div>
        <% }) %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>
